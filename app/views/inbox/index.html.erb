<div class="container-fluid mx-0">

<%= hidden_field_tag :"message_type", @message_type %>


<ul class="nav nav-pills my-3" id="pills-tab" role="tablist">
  <li class="nav-item">
    <%=link_to 'Bienvenue sur ta messagerie', inbox_index_path(content:"home"), class:"nav-link"%>
  </li>
  <li class="nav-item">
    <%=link_to 'Messages reçus', inbox_index_path(content:"received"), class:"nav-link"%>
  </li>
  <li class="nav-item">
    <%=link_to 'Messages envoyés', inbox_index_path(content:"sent"), class:"nav-link"%>
  </li>
  <li class="nav-item ml-auto mx-2">
    <%=link_to 'Accueil', root_path, class:"nav-link btn btn-outline-primary" %>
  </li>
  <li class="nav-item">
    <%=link_to 'Profil', root_path, class:"nav-link btn btn-outline-success" %>
  </li>
  
</ul>

<div class="tab-content" id="pills-tabContent">


<%= render 'search_messages_input' %>


<%if params["content"].present?%>


  <%if params["content"] == "home"%>
    <%= render 'inbox_welcome' %>
  <%elsif params["content"] == "received"%>
    <%= render 'received_messages' %>
  <%elsif params["content"] == "sent"%>
    <%= render 'sent_messages' %>
  <%end%>



<%end%>







</div>



</div>