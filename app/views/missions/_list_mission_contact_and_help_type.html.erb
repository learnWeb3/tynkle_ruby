<ul class="list-unstyled">
        <li class="mb-2" id ="email-contact"> 
          <div class="media align-items-center mb-3">
            <div class="mr-2"><i class="fas fa-envelope fa-2x text-left"></i></div>
            <% if @mission.email_contact? && @email.blank?%>
            <div class="media-body"><span class="text-sm"><%=link_to "Voir l'addresse mail", mission_path(id:@mission.id, anchor:"email-contact", display_email:true)%></span></div>
            <% elsif @mission.email_contact? && @email.present? %>
            <div class="media-body"><span class="text-sm"><%=@user.email%></span></div>
            <% else %>
            <div class="media-body"><span class="text-sm">Adresse mail non publiée</span></div>
            <% end %>
          </div>
        </li>
        <li class="mb-2" id="phone-contact"> 
          <div class="media align-items-center mb-3">
            <div class="mr-2"><i class="fas fa-phone fa-2x text-left"></i></div>
            <% if @mission.phone_contact?  && @phone.blank?%>
            <div class="media-body"><span class="text-sm"><%=link_to "Voir le numéro", mission_path(id:@mission.id, anchor:"phone-contact", display_phone:true)%></span></div>
            <% elsif @mission.phone_contact?  && @phone.present?%>
            <div class="media-body"><span class="text-sm"><%=@user.phone_number%></span></div>
            <% else %>
            <div class="media-body"><span class="text-sm">Téléphone non publié</span></div>
            <% end %>
          </div>
        </li>
        <li class="mb-2"> 
          <div class="media align-items-center mb-3">
            <div class="mr-2"><i class="fas fa-laptop fa-2x text-left"></i></div>
            <% if @mission.remote_help? %>
            <div class="media-body"><span class="text-sm">Asssistance à distance possible</div>
            <% else %>
            <div class="media-body"><span class="text-sm">Assistance à distance non souhaitée</div>
            <% end %>
          </div>
        </li>
        <li class="mb-2"> 
          <div class="media align-items-center mb-3">
            <div class="mr-2"><i class="far fa-handshake fa-2x text-left"></i></div>
            <% if @mission.in_person_help? %>
            <div class="media-body"><span class="text-sm">Asssistance en personne possible</div>
            <% else %>
            <div class="media-body"><span class="text-sm">Assistance en personne non souhaitée</div>
            <% end %>
          </div>
        </li>
      </ul>
      