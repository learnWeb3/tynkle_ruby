
<section class="justify-content-center text-center">

<%= form_for missions_path, method: :get do |f| %>

    <div class="form-inline justify-content-center my-4">

    <%= f.text_field :user_input, class:"form-control form-control-lg col-6", placeholder:"Rechercher une mission" %>
    <%= f.select :search_mission_type, options_for_select(["Titre", "Contenu", "Type d'appareil", "Type d'intervention", "Localisation"]), {}, { class: 'custom-select-lg mx-2'}%>
    <%= f.submit :rechercher, class:"btn btn-lg btn-outline-success" %>

    <% end %>

    </div>



    <div class="row justify-content-center my-4">



<% @missions.each do |mission| %>

        <div class="list-group col-9 shadow mb-5 p-4 bg-white position-relative">
            <div class="row">
                <div class="col-md-3 my-auto d-flex align-items-center">
                   
                    <% if mission.image_one.attached? %>
                            <%=image_tag mission.image_one, size:"100x100", alt:""%><h2 class="h5 mb-0 ml-2"><%=mission.title%></h2>
                    <%else%>
                    
                            <%=image_tag "icons/#{mission.categorytag.name}.png", size:"100x100", alt:"", class:"stretched-link"%><h2 class="h5 mb-0 ml-2"><%=mission.title%></h2>
                    <%end%>
                  
                </div>
           
                <div class="col-md-3 text-center my-auto d-block align-items-center">

                    <p class="mb-0 mx-auto"><%= mission.categorytag.name %></p>
                    <p class="mb-0 mx-auto mt-2"><%= mission.device_category.title %></p>
                 

                </div>

                <div class="col d-flex align-items-center">

                    <p class="mb-0 mx-auto">Budget :</p>
                    <p class="mb-0 mx-auto"><%= mission.price %> €</p>

                </div>

                <div class="col text-center my-auto d-flex align-items-center">

                    <p class="font-weight-bold mb-0">Postée par : <%= mission.user.first_name %></p>

                </div>

                <div class="col text-center my-auto d-block align-items-center">

                    <p class="mb-0 badge badge-pill p-2 badge-primary-light"><%=mission.created_at.strftime("le %d %b %Y")%></p>
                    <%= link_to 'Voir', mission_path(id:mission.id), class:"btn btn-outline-primary mt-2" %>
                   
                    
                </div>
            </div>

         
         

           
        </div>


<% end %>

</div>

</section>