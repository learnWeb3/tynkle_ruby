<%= render "layouts/navbar_white" %>

<section class="container my-4">

<% if @offer.expired? %>

<h4 class="text-center col-9 mx-auto my-3 text-muted">Nouvelle Offre envoyée par <%=@offer.user.first_name.capitalize%></h4>
<h6 class="text-center col-9 mx-auto my-3 text-muted">Reçue le  <%=@offer.full_date_created_at%> à <%=@offer.full_time_created_at%></h6>

<div class="row justify-content-center">
        <%= render 'col_offer_content_expired' %>
</div>

<% elsif @offer.accepted? %>

<h4 class="text-center col-9 mx-auto my-3">Offre envoyée par <%=@offer.user.first_name.capitalize%></h4>

<h6 class="text-center col-9 mx-auto my-3">Reçue le  <%=@offer.full_date_created_at%> à <%=@offer.full_time_created_at%></h6>

<div class="row justify-content-center">
        <%= render 'col_offer_content_accepted' %>
</div>


<% elsif @offer.rejected? %>

<h4 class="text-center col-9 mx-auto my-3">Offre envoyée par <%=@offer.user.first_name.capitalize%></h4>

<h6 class="text-center col-9 mx-auto my-3">Reçue le  <%=@offer.full_date_created_at%> à <%=@offer.full_time_created_at%></h6>

<div class="row justify-content-center">
        <%= render 'col_offer_content_rejected' %>
</div>

<% else %>

        <h4 class="text-center col-9 mx-auto my-3">Nouvelle Offre envoyée par <%=@offer.user.first_name.capitalize%></h4>
        <h6 class="text-center col-9 mx-auto my-3">Reçue le  <%=@offer.full_date_created_at%> à <%=@offer.full_time_created_at%></h6>

        <div class="row">

                <%= render 'col_button_decline_offer' %>
                <%= render 'col_offer_content' %>
                <%=render 'col_button_accept_offer' %>

        </div>


<% end %>

            


</section>