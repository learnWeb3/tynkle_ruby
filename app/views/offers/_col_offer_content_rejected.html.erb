<div class="col-6 p-4 text-left shadow mx-auto">

<div class="row">
    <div class="col">
        <div class="card" style="width: 12rem;">
            <div class="card-header bg-light-grey-2 text-white font-weight-bold text-center text-muted"> <%=@offer.full_month_name%> <%=@offer.full_year%></div>
            <div class="card-body text-center p-0">
                <p class="mt-1 text-muted"> Rendez vous le : </p>
                <h6 class="text-muted"><%=@offer.abbreviated_day_name%> <%=@offer.zero_padded_day%></h6>
                <p class="text-muted"><%=@offer.full_time_schedule%></p>
            </div>
        </div>
    </div>
    <div class="col d-flex align-items-center">
        <div>
        <h5 class="label text-muted">Objet de l'offre :</h5>
        <p class="font-weight-bold font-italic text-muted"> <%=@offer.title.upcase%> </p>
        </div>
    </div>
</div>

<hr class="mb-4">

<div class="row">
<%= image_tag "icons/offer_rejected", class:"img-fluid expired w-50"%>
        <div class="col">
            <h6 class="label text-muted">Montant de l'Offre</h6>
            <div class="text-muted"> <%=@offer.price%> Euros</div> 
        </div>
</div>

<hr class="mb-4">

<div class="row">
    <div class="col">
        <h6 class="label text-muted">Contenu de l'offre </h6>
        <div class="text-muted"> <%=@offer.content%> </div>
    </div>
    <div class="col">
    </div>
</div>

</div>


