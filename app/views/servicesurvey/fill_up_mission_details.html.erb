<section class="container mt-4">

        <h2 class="text-center">Créer une demande</h2>


        <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 17%;" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"><%=link_to "Type d'appareil", wizard_path(:device_type), class:"text-white"%></div>
            <div class="progress-bar bg-success" role="progressbar" style="width: 17%;" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"><%=link_to "De quoi s'agit-il ?", wizard_path(:problem_type), class:"text-white"%></div>
            <div class="progress-bar progress-bar" role="progressbar" style="width: 17%;" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"><%=link_to "Ecrire ma demande", wizard_path(:fill_up_mission_details), class:"text-white"%></div>
            <div class="progress-bar progress-bar bg-light" role="progressbar" style="width: 17%;" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"><%=link_to "De quoi s'agit-il", wizard_path(:review_mission), class:"text-dark"%></div>
            <div class="progress-bar progress-bar bg-light" role="progressbar" style="width: 17%;" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"><%=link_to "De quoi s'agit-il", wizard_path(:select_helper), class:"text-dark"%></div>
            <div class="progress-bar progress-bar bg-light" role="progressbar" style="width: 17%;" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"><%=link_to "De quoi s'agit-il", wizard_path(:send_message), class:"text-dark"%></div>
        </div>
      

        <div class="row justify-content-center my-4">

            <div class="col">

                <%= form_for missions_path, method: :post do |f| %>
                    <div class="form-group col-12">
                        <%=  f.label :"Titre_de_la_demande :" %>
                        <%=  f.text_field :title, class:"form-control mb-4"  %>
                    </div>

                    <div class="form-group col-12">
                        <%=  f.label :"Description_de_la_demande :"%>
                        <%=  f.text_area :description, class:"form-control mb-4", rows:"10"  %>
                    </div>

            </div>

            <div class="col">

            <div class="form-group col-12">
                <%=  f.label :"Type d'Appareil :" %>
                <%=  f.text_field :title, class:"form-control mb-4", value:@device_category.title, disabled:true  %>
            </div>


            <div class="form-group col-12">
                <%=  f.label :"Catégorie :" %>
                <%=  f.text_field :title, class:"form-control mb-4", value:@problem_type.name, disabled:true  %>
            </div>


            <div class="form-group col-12">
                <%=  f.label :"Budget :" %>
                <%=  f.number_field :title, class:"col-6 form-control mb-4"  %>
            </div>

            <div class="form-group col-12">
            <%=  f.label :"Ajouter des photos :" %>
            
            <div class="row">
                <div class="col">
                <%=  f.file_field :title, class:"form-control-file mb-4"  %>
                </div>
                <div class="col">
                <%=  f.file_field :title, class:"form-control-file mb-4"  %>
                </div>
                <div class="col">
                <%=  f.file_field :title, class:"form-control-file mb-4"  %>
                </div>
            </div>

            </div>

            


            </div>

            
        </div>

       
    
        <div class="row col-8 justify-content-end my-4 mx-auto">
            <%= f.submit "Suivant", class:"btn btn-primary" %>
            <% end %>
        </div> 
        
    
</section>